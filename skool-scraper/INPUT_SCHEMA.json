{
  "title": "Skool.com Community Scraper",
  "description": "Extract posts, comments, and user data from Skool.com communities",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrls": {
      "title": "Community URLs",
      "type": "array",
      "description": "List of Skool.com community URLs to scrape. You must be a member of these communities.",
      "prefill": [
        { "url": "https://www.skool.com/ai-automation-mastery" }
      ],
      "editor": "requestListSources"
    },
    "tab": {
      "title": "Content Tab",
      "type": "string",
      "description": "Which tab to scrape from the community",
      "default": "community",
      "editor": "select",
      "enum": ["community", "classroom"],
      "enumTitles": ["Community (Posts & Discussions)", "Classroom (Courses & Modules)"]
    },
    "includeComments": {
      "title": "Include Comments",
      "type": "boolean",
      "description": "Whether to extract comments for each post (may significantly increase scraping time)",
      "default": true,
      "editor": "checkbox"
    },
    "maxItems": {
      "title": "Maximum Items",
      "type": "integer",
      "description": "Maximum number of posts to scrape per community (0 = unlimited)",
      "default": 1000,
      "minimum": 0,
      "maximum": 50000
    },
    "maxConcurrency": {
      "title": "Maximum Concurrency",
      "type": "integer",
      "description": "Maximum number of concurrent requests (higher = faster but more resource intensive)",
      "default": 10,
      "minimum": 1,
      "maximum": 50
    },
    "minConcurrency": {
      "title": "Minimum Concurrency",
      "type": "integer",
      "description": "Minimum number of concurrent requests",
      "default": 1,
      "minimum": 1,
      "maximum": 10
    },
    "maxRequestRetries": {
      "title": "Request Retries",
      "type": "integer",
      "description": "Maximum number of retries for failed requests",
      "default": 3,
      "minimum": 0,
      "maximum": 10
    },
    "cookies": {
      "title": "Authentication Cookies",
      "type": "array",
      "description": "Cookies exported from your browser after logging into Skool.com. Required for accessing community content. Use Cookie-Editor or EditThisCookie browser extension.",
      "editor": "json"
    },
    "proxyConfig": {
      "title": "Proxy Configuration",
      "type": "object",
      "description": "Proxy settings for reliable scraping and avoiding IP blocks",
      "editor": "proxy",
      "default": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"]
      },
      "prefill": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"]
      }
    },
    "requestDelay": {
      "title": "Request Delay (seconds)",
      "type": "integer",
      "description": "Delay between requests to mimic human behavior and avoid rate limiting",
      "default": 2,
      "minimum": 1,
      "maximum": 10
    },
    "scrollDelay": {
      "title": "Scroll Delay (seconds)",
      "type": "integer",
      "description": "Delay between scroll actions during pagination",
      "default": 2,
      "minimum": 1,
      "maximum": 5
    },
    "debug": {
      "title": "Debug Mode",
      "type": "boolean",
      "description": "Enable verbose logging for troubleshooting",
      "default": false,
      "editor": "checkbox"
    },
    "searchFilters": {
      "title": "Advanced Search Filters",
      "type": "object",
      "description": "Advanced filtering options to extract specific content",
      "editor": "json",
      "properties": {
        "dateRange": {
          "title": "Date Range Filter",
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "startDate": {
              "type": "string",
              "format": "date",
              "description": "Start date (YYYY-MM-DD)"
            },
            "endDate": {
              "type": "string",
              "format": "date",
              "description": "End date (YYYY-MM-DD)"
            }
          }
        },
        "engagement": {
          "title": "Engagement Filters",
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "minLikes": {
              "type": "integer",
              "minimum": 0,
              "description": "Minimum number of likes"
            },
            "maxLikes": {
              "type": "integer",
              "minimum": 0,
              "description": "Maximum number of likes"
            },
            "minComments": {
              "type": "integer",
              "minimum": 0,
              "description": "Minimum number of comments"
            },
            "minEngagementRate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Minimum engagement rate (0-1)"
            }
          }
        },
        "content": {
          "title": "Content Filters",
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "keywords": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Keywords that must be present"
            },
            "excludeKeywords": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Keywords to exclude"
            },
            "minLength": {
              "type": "integer",
              "minimum": 0,
              "description": "Minimum content length"
            },
            "hasMedia": {
              "type": "boolean",
              "description": "Only posts with media attachments"
            }
          }
        },
        "authors": {
          "title": "Author Filters",
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "includeAuthors": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Only posts from these authors"
            },
            "excludeAuthors": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Exclude posts from these authors"
            }
          }
        },
        "sorting": {
          "title": "Sorting Options",
          "type": "object",
          "properties": {
            "sortBy": {
              "type": "string",
              "enum": ["date", "likes", "comments", "engagement", "alphabetical"],
              "default": "date",
              "description": "Sort posts by"
            },
            "sortOrder": {
              "type": "string",
              "enum": ["asc", "desc"],
              "default": "desc",
              "description": "Sort order"
            }
          }
        }
      }
    },
    "searchPresets": {
      "title": "Search Presets",
      "type": "string",
      "description": "Quick filter presets for common use cases",
      "editor": "select",
      "enum": ["none", "high-engagement", "recent-posts", "popular-discussions", "trending-content"],
      "enumTitles": [
        "No preset (custom filters)",
        "High Engagement (50+ likes, 10+ comments)",
        "Recent Posts (last 30 days)",
        "Popular Discussions (25+ likes, 5+ comments)",
        "Trending Content (high engagement + recent)"
      ],
      "default": "none"
    }
  },
  "required": ["startUrls", "cookies"]
}